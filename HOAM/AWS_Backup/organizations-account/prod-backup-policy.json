{
  "plans": {
    "RDS-DAILY-BACKUP-PLAN": {
      "regions": {
        "@@assign": [
          "ca-central-1",
          "us-west-1",
          "us-west-2",
          "us-east-1",
          "us-east-2",
          "sa-east-1"
        ]
      },
      "rules": {
        "DAILY-35-DAY-RETENTION": {
          "lifecycle": {
            "delete_after_days": {
              "@@assign": "7"
            }
          },
          "target_backup_vault_name": {
            "@@assign": "source-backup-vault-Prod"
          },
          "enable_continuous_backup": {
            "@@assign": false
          },
          "copy_actions": {
            "arn:aws:backup:us-east-1:$account:backup-vault:intermediate-backup-vault-Prod": {
              "target_backup_vault_arn": {
                "@@assign": "arn:aws:backup:us-east-1:$account:backup-vault:intermediate-backup-vault-Prod"
              },
              "lifecycle": {
                "delete_after_days": {
                  "@@assign": "35"
                },
                "opt_in_to_archive_for_supported_resources": {
                  "@@assign": "false"
                }
              }
            }
          }
        }
      },
      "selections": {
        "resources": {
          "PRD-RDS": {
            "iam_role_arn": {
              "@@assign": "arn:aws:iam::$account:role/CustomBackupServiceRole"
            },
            "resource_types": {
              "@@assign": [
                "arn:aws:rds:*:*:db:*",
                "arn:aws:rds:*:*:cluster:*"
              ]
            }
          }
        }
      }
    }
  }
}