{
  "plans": {
    "RDS-DAILY-BACKUP-PLAN": {
      "regions": {
        "@@assign": [
          "ca-central-1",
          "us-west-1",
          "us-west-2",
          "us-east-1",
          "us-east-2",
          "sa-east-1"
        ]
      },
      "rules": {
        "DAILY-35-DAY-RETENTION": {
          "schedule_expression": {
            "@@assign": "cron(0/5 * * * ? *)"
          },
          "lifecycle": {
            "delete_after_days": {
              "@@assign": "1"
            }
          },
          "recovery_point_tags": {
            "CopyToVault": {
              "tag_key": {
                "@@assign": "CopyToVault"
              },
              "tag_value": {
                "@@assign": "ArnCrossAccountVault"
              }
            }
          },
          "target_backup_vault_name": {
            "@@assign": "source-backup-vault-Dev"
          },
          "enable_continuous_backup": {
            "@@assign": false
          },
          "copy_actions": {
            "arn:aws:backup:us-east-1:$account:backup-vault:intermediate-backup-vault-Dev": {
              "target_backup_vault_arn": {
                "@@assign": "arn:aws:backup:us-east-1:$account:backup-vault:intermediate-backup-vault-Dev"
              },
              "lifecycle": {
                "delete_after_days": {
                  "@@assign": "7"
                }
              }
            }
          }
        }
      },
      "selections": {
        "resources": {
          "PRD-RDS": {
            "iam_role_arn": {
              "@@assign": "arn:aws:iam::$account:role/CustomBackupServiceRole"
            },
            "resource_types": {
              "@@assign": [
                "arn:aws:rds:*:*:db:*",
                "arn:aws:rds:*:*:cluster:*"
              ]
            }
          }
        }
      }
    }
  }
}